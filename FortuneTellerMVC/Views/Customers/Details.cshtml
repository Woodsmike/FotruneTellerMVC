@model FortuneTellerMVC.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="container-fluid">
        <div class="row">
           
                <h2>
                    @Html.Display(Model.FirstName)
                </h2>
                <h2>
                    @Html.Display(Model.LastName)
                </h2>
                <p>You will retire in <span>@ViewBag.RetireAge</span> years.</p>
                <br />
                <p>Your retirement location will be <span>@ViewBag.VacLocation</span>.</p>
                <br />
                <p>Your transportation will be <span>@ViewBag.Transportation</span>.</p>
                <br />
                <p>You will retire with <span>@ViewBag.RetireMoney</span>.</p>
                <h4>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.CustomerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.CustomerID })
                </h4>

           
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
